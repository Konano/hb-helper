{
  "manifest_version": 3,
  "name": "华宝条件单助手",
  "version": "0.1.0",
  "description": "快速打开华宝智投条件单网页，一键延期所有条件单",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.touker.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "optional_permissions": [],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}
